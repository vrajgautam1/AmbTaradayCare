<%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>

        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">

            <div class="container-fluid">

                <div class="row">
                    <div class="container-fluid mt-4">

                        <!-- üîº Add New Event -->
                        <div class="card mb-5 shadow-sm">
                            <div class="card-body">
                                <h4 class="mb-4">Add New Event</h4>
                                <form action="/admin/createevent" method="POST" enctype="multipart/form-data"
                                    id="eventForm">
                                    <div class="mb-3">
                                        <label class="form-label">Title</label>
                                        <input type="text" name="title" class="form-control" required />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Description</label>
                                        <textarea name="description" class="form-control" rows="4"></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Date</label>
                                        <input type="date" name="date" class="form-control" required />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Event Image</label>
                                        <input type="file" name="image" class="form-control" accept="image/*"
                                            required />
                                    </div>

                                    <button type="submit" class="btn btn-primary" id="submitBtn">
                                        <span id="btnText">Add Event</span>
                                        <span id="spinner" class="spinner-border spinner-border-sm d-none"></span>
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- üöÄ Upcoming Events -->
                        <h4 class="mb-3">Upcoming Events</h4>
                        <div class="row">
                            <% events.filter(e=> new Date(e.date) >= new Date()).forEach(event => { %>
                                <div class="col-md-4">
                                    <div class="card mb-4 shadow-sm">
                                        <img src="/uploads/<%= event.image %>" class="card-img-top" alt="Event">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= event.title %>
                                            </h5>
                                            <p>
                                                <%= event.description %>
                                            </p>
                                            <p class="text-muted">Date: <%= new Date(event.date).toLocaleDateString() %>
                                            </p>
                                            <p>Status:
                                                <span
                                                    class="badge bg-<%= event.isApproved ? 'success' : 'secondary' %>">
                                                    <%= event.isApproved ? 'Approved' : 'Disapproved' %>
                                                </span>
                                            </p>

                                            <div class="d-flex justify-content-between">
                                                <!-- Edit -->
                                                <a href="/admin/event/<%= event._id %>" class="btn btn-sm btn-info">‚úèÔ∏è
                                                    Edit</a>

                                                <!-- Approve/Disapprove -->
                                                <% if (event.isApproved) { %>
                                                    <a href="/admin/disapproveEvent/<%= event._id %>"
                                                        class="btn btn-sm btn-warning">‚ùå Disapprove</a>
                                                    <% } else { %>
                                                        <a href="/admin/approveEvent/<%= event._id %>"
                                                            class="btn btn-sm btn-success">‚úÖ Approve</a>
                                                        <% } %>

                                                            <!-- Delete -->
                                                            <a href="/admin/event/<%= event._id %>/delete"
                                                                class="btn btn-sm btn-danger"
                                                                onclick="return confirm('Are you sure you want to delete this event?')">üóëÔ∏è
                                                                Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <hr class="my-5">

                        <!-- üïì Past Events -->
                        <h4 class="mb-3">Past / Active Events</h4>
                        <div class="row">
                            <% events.filter(e=> new Date(e.date) < new Date()).forEach(event=> { %>
                                    <div class="col-md-4">
                                        <div class="card mb-4 shadow-sm">
                                            <img src="/uploads/<%= event.image %>" class="card-img-top" alt="Event">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <%= event.title %>
                                                </h5>
                                                <p>
                                                    <%= event.description %>
                                                </p>
                                                <p class="text-muted">Date: <%= new
                                                        Date(event.date).toLocaleDateString() %>
                                                </p>
                                                <p>Status:
                                                    <span
                                                        class="badge bg-<%= event.isApproved ? 'success' : 'secondary' %>">
                                                        <%= event.isApproved ? 'Approved' : 'Disapproved' %>
                                                    </span>
                                                </p>

                                                <div class="d-flex justify-content-between">
                                                    <a href="/admin/event/<%= event._id %>"
                                                        class="btn btn-sm btn-info">‚úèÔ∏è Edit</a>

                                                    <% if (event.isApproved) { %>
                                                        <a href="/admin/disapproveEvent/<%= event._id %>"
                                                            class="btn btn-sm btn-warning">‚ùå Disapprove</a>
                                                        <% } else { %>
                                                            <a href="/admin/approveEvent/<%= event._id %>"
                                                                class="btn btn-sm btn-success">‚úÖ Approve</a>
                                                            <% } %>

                                                                <a href="/admin/event/<%= event._id %>/delete"
                                                                    class="btn btn-sm btn-danger"
                                                                    onclick="return confirm('Are you sure you want to delete this event?')">üóëÔ∏è
                                                                    Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                        </div>
                    </div>
                </div>

                <script>
                    const form = document.getElementById('eventForm');
                    const spinner = document.getElementById('spinner');
                    const btnText = document.getElementById('btnText');

                    form.addEventListener('submit', () => {
                        spinner.classList.remove('d-none');
                        btnText.textContent = 'Uploading...';
                    });
                </script>

                <%- include('../partials/footer') %>