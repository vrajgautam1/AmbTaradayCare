<%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>

        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">

            <div class="container-fluid">

                <div class="row">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="container-fluid mt-5">
                                <h3 class="mb-4">Inquiries</h3>

                                <div class="table-responsive">
                                    <table class="table table-bordered align-middle table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Phone</th> <!-- üîÑ Changed from Email -->
                                                <th>Message</th>
                                                <th>Received At</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (inquiries && inquiries.length> 0) { %>
                                                <% inquiries.forEach((inq, index)=> { %>
                                                    <tr class="<%= inq.isRead ? '' : 'table-light' %>">
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= inq.name %>
                                                        </td>
                                                        <td>
                                                            <%= inq.phone %>
                                                        </td> <!-- üîÑ Changed from inq.email -->
                                                        <td>
                                                            <%= inq.message %>
                                                        </td>
                                                        <td>
                                                            <%= new Date(inq.createdAt).toLocaleString() %>
                                                        </td>
                                                        <td>
                                                            <span
                                                                class="badge bg-<%= inq.isRead ? 'success' : 'secondary' %>">
                                                                <%= inq.isRead ? 'Read' : 'Unread' %>
                                                            </span>
                                                        </td>
                                                        <td class="d-flex gap-2">
                                                            <% if (!inq.isRead) { %>
                                                                <a href="/admin/markAsReadInquiry/<%= inq._id %>"
                                                                    class="btn btn-sm btn-success">
                                                                    ‚úÖ Mark as Read
                                                                </a>
                                                                <% } %>
                                                                    <a href="/admin/deleteInquiries/<%= inq._id %>"
                                                                        class="btn btn-sm btn-danger"
                                                                        onclick="return confirm('Are you sure you want to delete this inquiry?')">
                                                                        üóëÔ∏è Delete
                                                                    </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="7" class="text-center">No inquiries yet.
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>